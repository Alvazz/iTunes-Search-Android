<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryDark">@color/lightGreenPrimaryDark</item>-->
        <item name="colorAccent">@color/lightGreenPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TrackTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/track_title_text_size</item>
        <item name="android:padding">@dimen/activity_horizontal_padding_default</item>
    </style>

    <style name="AppTheme.TrackDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">@dimen/track_desc_text_size</item>
        <item name="android:padding">@dimen/activity_horizontal_padding_default</item>
    </style>

    <style name="AppTheme.TitleHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:padding">@dimen/activity_horizontal_margin_default</item>
    </style>

    <style name="AppTheme.DescriptionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/description_header_text_size</item>
        <item name="android:padding">@dimen/activity_horizontal_margin_default</item>
    </style>

    <style name="AppTheme.DescriptionDetail" parent="AppTheme.TrackDescription">
        <item name="android:padding">@dimen/activity_horizontal_margin_default</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <!--<item name="android:textColor">@color/white</item>-->
        <item name="android:backgroundTint">@color/lightGreen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/activity_horizontal_margin_default</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_padding_default</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:background">@color/black</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <!--<item name="android:textColor">@color/white</item>-->
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="AppTheme.TextAppearance.HeadlineSmall" parent="AppTheme.TextAppearance.Headline">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
