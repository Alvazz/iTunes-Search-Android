<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/black</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.TrackTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">@dimen/track_title_text_size</item>
        <item name="android:padding">@dimen/activity_horizontal_padding_default</item>
    </style>

    <style name="AppTheme.TitleHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:padding">@dimen/activity_horizontal_margin_default</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/lightGreen</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:padding">@dimen/activity_horizontal_margin_default</item>
    </style>

</resources>
