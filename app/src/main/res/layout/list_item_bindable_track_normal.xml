<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="trackTitle"
            type="String" />

        <variable
            name="trackPrice"
            type="String" />

        <variable
            name="trackGenre"
            type="String" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{onClick}">

        <ImageView
            android:id="@+id/trackImage"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            app:imageTrackUrl="@{imageUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_audiotrack_light_green_96dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleText"
            style="@style/AppTheme.TrackTitle"
            android:layout_width="0dp"
            android:autoSizeTextType="uniform"
            android:paddingStart="@dimen/activity_horizontal_padding_default"
            android:paddingEnd="@dimen/activity_horizontal_padding_default"
            android:text="@{trackTitle}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/trackImage"
            app:layout_constraintTop_toTopOf="@+id/trackImage"
            tools:text="@string/track_placeholder_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/trackPrice"
            style="@style/AppTheme.TrackDescription"
            android:layout_width="0dp"
            android:autoSizeTextType="uniform"
            android:text="@{trackPrice}"
            app:layout_constraintEnd_toEndOf="@+id/titleText"
            app:layout_constraintStart_toStartOf="@+id/titleText"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            tools:text="Price" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/AppTheme.TrackDescription"
            android:layout_width="0dp"
            android:autoSizeTextType="uniform"
            android:text="@{trackGenre}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/titleText"
            app:layout_constraintTop_toBottomOf="@+id/trackPrice"
            tools:text="Genre" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>